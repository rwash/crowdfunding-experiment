<div id="container">	
	<div class="row">
   	<div class="span9">
			<div class="page-header">
			  	<h2>Experiment #<%= @experiment.id %> - Status</h2>
			</div>
		
			<table class="table table-striped table-bordered table-condensed">      
				<thead>
					<tr>
						<td><h4>User</h4></td>       
						<td><h4>Type</h4></td>       
						<td><h4>Status</h4></td>
					</tr>
			 	</thead>
				<tbody>
					<% @experiment.users.each do |user| %>
						<% next if user.user_type == "Creator"%>
						<tr>
							<td><%= user.name %></td>
							<td><%= user.user_type %></td>
							<td><%= user.status %></td>
						</tr>
					<% end %>
				</tbody>
			</table>    
			<br>
			
			<div class="form-actions">
				<%= link_to "Return to Dashboard", admin_dashboard_path, :class => "btn-info btn-large pull-right" %>
			</div>
 
		</div>   
		<div class="span3">
 			<%= render "status_sidebar" %>
		</div>
	</div>
</div>


<script type="text/javascript">
	window.setTimeout(function() {
    	window.location.reload()
    }, 4000);
</script>