<div class="page-header">
	<h1>Round Summary</h1>
</div>

<%= render :partial => 'projects/stats', :locals => { :admin => false } %>

<br>
<div class="row">
 	<div class="span12">
		<h3>Round Details:</h3>
  		<br>
    	<table class="table table-striped table-bordered table-condensed">
      	<thead>
        		<tr>
          		<th><h4>Project Name</h4></th>
          		<th><h4>Payouts</h4></th>
          		<th><h4>Funding Status</h4></th>
          		<th><h4>Credits</h4></th>
        		</tr>
      	</thead>
      	
			<tbody>
				<% @current_round.projects.each do |project| %>
					<tr>
						<th><%= project.name %></th>			
		    	  		<th></th>
						<th>
				   		<% if project.funded? %>
			    	   		<font color="#468847">Funded</font>
			        		<% else %>
			    	      	<font color="#B94A48">Not Funded</font>
			         	<% end %>
			    		</th>
						<th></th>
					</tr>
				<% end %>
      	</tbody>
    	</table>
  	</div>
</div>

<br>
<br>
<div class="row">
 	<div class="span12">
		<h3>Contribution Details:</h3>
  		<br>
    	<table class="table table-striped table-bordered table-condensed">
      	<thead>
        		<tr>
          		<th><h4>Project Name</h4></th>
          		<th><h4>Amount</h4></th>
        		</tr>
      	</thead>
      	
			<tbody>
				<% @contributions.each do |contribution| %>
					<tr>
						<th><%= contribution.project.name %></th>			
		    	  		<th><%= contribution.amount %></th>
					</tr>
				<% end %>
      	</tbody>
    	</table>
  	</div>
</div>

<br>
<br>
<div class="row">
  	<div class="span5">
		<table class="table">
			<tbody>
				<tr>
					<td><h3>Credits Not Donated: </h3></td>
					<td><font color="#F89406"><%= @not_donated %></font></td>				
				</tr>
				<tr>
					<td><h3>Total Round Payout: </h3></td>
					<td></td>				
				</tr>
				<tr>
					<td><h3>Total Credits Banked: </h3></td>
					<td></td>								
				</tr>
			</tbody>
		</table>
	</div>
</div>

<div class="form-actions">
	<% if @current_round.last_round? %>
		<%= link_to "Experiment Summary", experiment_summary_waiting_path(@current_experiment), :class => 'btn-success btn-large pull-right' %>
	<% else %>
		<%= link_to "Ready for Next Round", round_waiting_path(@next_round), :class => 'btn-success btn-large pull-right' %>  
	<% end %>
</div>